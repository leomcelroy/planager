{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "firefox",
            "request": "launch",
            "type": "firefox",
            "reAttach": true,
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "python",
            "request": "launch",
            "type": "python",
            "program": "run.py",
            "env": {
                "GEVENT_SUPPORT": "True" // This flag needs to be enabled to work with the VSCode debugger
            }
        },
        {
            "name": "javascript",
            "request": "launch",
            "type": "node-terminal",
            "command": "npm run start",
        }
    ],
    "compounds": [
        {
            "name": "full stack",
            "configurations": [
                "python",
                "javascript",
            ]
        }
    ]
}